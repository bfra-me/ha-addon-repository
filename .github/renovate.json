{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["local>bfra-me/renovate-config", ":pinAllExceptPeerDependencies"],
  "regexManagers": [
    {
      "datasourceTemplate": "docker",
      "fileMatch": ["(^|/|\\.)build.ya?ml$"],
      "matchStrings": [
        "\\s*aarch64:\\s+?\"(?<registry>:?[\\/a-z\\.-]+\\/)*(?<depName>[\\/a-z-]+)(?::(?<currentValue>[a-z0-9.-]+))?\"",
        "\\s*amd64:\\s+?\"(?<registry>:?[\\/a-z\\.-]+\\/)*(?<depName>[\\/a-z-]+)(?::(?<currentValue>[a-z0-9.-]+))?\"",
        "\\s*armhf:\\s+?\"(?<registry>:?[\\/a-z\\.-]+\\/)*(?<depName>[\\/a-z-]+)(?::(?<currentValue>[a-z0-9.-]+))?\"",
        "\\s*armv7:\\s+?\"(?<registry>:?[\\/a-z\\.-]+\\/)*(?<depName>[\\/a-z-]+)(?::(?<currentValue>[a-z0-9.-]+))?\"",
        "\\s*i386:\\s+?\"(?<registry>:?[\\/a-z\\.-]+\\/)*(?<depName>[\\/a-z-]+)(?::(?<currentValue>[a-z0-9.-]+))?\""
      ],
      "packageNameTemplate": "{{{ registry }}}{{{ depName }}}"
    }
  ]
}
